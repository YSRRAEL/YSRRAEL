<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cuadrícula Editable del 0 al 99</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f9f9f9;
        }
        h1 {
            margin-bottom: 20px;
            color: #333;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(10, 80px);
            grid-template-rows: repeat(10, 80px);
            gap: 10px;
            margin-top: 20px;
        }
        .cell {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ffffff;
            border-radius: 10px;
            border: 2px solid #dddddd;
            font-size: 24px;
            cursor: pointer;
            transition: background-color 0.3s, border-color 0.3s;
        }
        .cell:hover {
            border-color: #66b3ff;
        }
        .cell input {
            width: 100%;
            height: 100%;
            border: none;
            font-size: 24px;
            text-align: center;
            border-radius: 10px;
            display: none; /* Oculta el input inicialmente */
        }
        .cell.editing {
            background-color: #e0e0e0; /* Color al editar */
        }
        .cell.success {
            background-color: #90ee90; /* Verde claro al guardar */
        }
        .error {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Cuadrícula Editable</h1>
    <div class="grid">
        <script>
            for (let i = 0; i < 100; i++) {
                document.write(`
                    <div class="cell" tabindex="0" onclick="editCell(this)">
                        <span>${i}</span>
                        <input type="text" onkeypress="updateCell(event, this)">
                    </div>
                `);
            }
        </script>
    </div>

    <script>
        function editCell(cell) {
            const password = prompt("Ingrese la contraseña para editar:");
            if (password === '17551899') {
                const input = cell.querySelector('input');
                const span = cell.querySelector('span');
                cell.classList.add('editing');
                input.style.display = 'block';
                input.value = span.textContent; // Coloca el valor actual en el input
                span.style.display = 'none'; // Oculta el span
                input.focus(); // Enfoca el input
            } else {
                alert('Contraseña incorrecta. No se puede editar la celda.');
            }
        }

        function updateCell(event, input) {
            if (event.key === 'Enter') {
                const cell = input.parentElement;
                const span = cell.querySelector('span');
                span.textContent = input.value; // Actualiza el valor del span
                input.style.display = 'none'; // Oculta el input
                span.style.display = 'block'; // Muestra el span
                cell.classList.remove('editing'); // Quita la clase de edición
                cell.classList.add('success'); // Cambia el fondo a verde claro
            }
        }
    </script>
</body>
</html>
